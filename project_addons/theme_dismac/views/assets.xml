<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <!-- Custom styles already load at theme_data.xml -->
    <template id="website_assets_frontend" name="Website Assets Dismac" inherit_id="website.assets_frontend">
        <xpath expr="link[last()]" position="after">
            <!-- Less -->
            <link href="/theme_dismac/static/css/_general.less" rel="stylesheet" type="text/less"/>
            <link href="/theme_dismac/static/css/category.less" rel="stylesheet" type="text/less"/>
            <link href="/theme_dismac/static/css/cookies.less" rel="stylesheet" type="text/less"/>
            <link href="/theme_dismac/static/css/elements.less" rel="stylesheet" type="text/less"/>
            <link href="/theme_dismac/static/css/footer.less" rel="stylesheet" type="text/less"/>
            <link href="/theme_dismac/static/css/header.less" rel="stylesheet" type="text/less"/>
            <link href="/theme_dismac/static/css/product.less" rel="stylesheet" type="text/less"/>
            <link href="/theme_dismac/static/css/quote.less" rel="stylesheet" type="text/less"/>
            <link href="/theme_dismac/static/css/shop.less" rel="stylesheet" type="text/less"/>

            <!-- Sass -->
            <link href="/theme_dismac/static/scss/custom_portal.scss" rel="stylesheet" type="text/scss"/>
            <link href="/theme_dismac/static/scss/shop.scss" rel="stylesheet" type="text/scss"/>

            <!-- Theme Common -->
<!--            <link rel="stylesheet" type="text/scss" href="/theme_common/static/src/scss/s_discount.scss"/>-->
        </xpath>

        <!-- Scripts -->
        <xpath expr="//script[last()]" position="after">
            <script type="text/javascript" src="/theme_dismac/static/js/main.js"/>
        </xpath>
    </template>

    <template id="_assets_primary_variables" inherit_id="web._assets_primary_variables">
        <xpath expr="link[last()]" position="after">
            <link rel="stylesheet" type="text/scss" href="/theme_dismac/static/scss/primary_variables.scss"/>
        </xpath>
    </template>

    <!-- Variables to access via bootstrap_overriden file -->
    <template id="_assets_frontend_helpers" inherit_id="web._assets_frontend_helpers">
        <xpath expr="//link[last()]" position="after">
            <link rel="stylesheet" type="text/scss" href="/theme_dismac/static/scss/bootstrap_overridden.scss"/>
        </xpath>
    </template>

</odoo>