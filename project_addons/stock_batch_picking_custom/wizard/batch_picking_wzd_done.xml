<?xml version="1.0"?>
<odoo>

        <record id="action_view_s" model="ir.actions.act_window">
            <field name="name">Move done</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">batch.picking.wzd.done</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="target">current</field>
            <field name="groups_id" eval="[(4,ref('sales_team.group_sale_salesman'))]"/>
            <!-- TODO: check if we need this -->
            <field name="binding_model_id" ref="stock_batch_picking.model_stock_batch_picking" />
        </record>

        <record id="batch_picking_wzd_done_form" model="ir.ui.view">
            <field name="name">Set move as done</field>
            <field name="model">batch.picking.wzd.done</field>
            <field name="arch" type="xml">
                <form string="Batch picking wzd">
                    <group>
                        <p colspan="4">Select the batch</p>
                    </group>
                    <group colspan="2">
                        <field name="batch_id"/>
                    </group>
                    <group>
                    <group string="Groups" colspan="2">
                        <field name="moves_done" nolabel="1">
                             <tree>
                                 <field name="product_id"/>
                                 <button name="set_as_visible"
                                         type="object"
                                         class="oe_stat_button"
                                         icon="fa-binoculars"/>
                                 <field name="location_id"/>
                                 <field name="product_uom_qty"/>
                                 <field name="qty_done"/>
                            </tree>
                        </field>
                    </group>

                    <group string="Operations" colspan="2">
                        <field name="move_line_ids" domain="[('invisible', '!=', True)]" nolabel="1" >
                            <tree editable='bottom' delete="false" edit="true" create="false">
                                <field name="sale_order" readonly="1"/>
                                <field name="product_id" readonly="1"/>
                                <field name="location_id" readonly="1"/>
                                <field name="product_uom_qty" readonly="1"/>
                                <field name="qty_done"/>
                            </tree>
                        </field>
                    </group>
                    </group>

                    <footer>
                        <button name="action_done"
                                string="Make done"
                                type="object"
                                class="oe_highlight" />
                        or
                        <button
                            name="action_cancel"
                            string="Cancel"
                            class="oe_link"
                            special="cancel"
                            />
                    </footer>
                </form>
            </field>
        </record>



</odoo>
