<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- stock.batch.picking form view -->
    <record model="ir.ui.view" id="stock_batch_picking_form_custom">
        <field name="name">stock.batch.picking.form.custom</field>
        <field name="model">stock.batch.picking</field>
        <field name="inherit_id" ref="stock_batch_picking.stock_batch_picking_form"/>
        <field name="arch" type="xml">
            <field name="picker_id" position="before">
                <field name="picking_type_id"/>
            </field>
            <xpath expr="//field[@name='move_line_ids']/tree/field[@name='product_id']" position="before">
                    <field name="sale_order"/>
            </xpath>
        </field>
    </record>
    <record model="ir.ui.view" id="stock_batch_picking_tree_custom">
        <field name="name">stock.batch.picking.tree.custom</field>
        <field name="model">stock.batch.picking</field>
        <field name="inherit_id" ref="stock_batch_picking.stock_batch_picking_tree"/>
        <field name="arch" type="xml">
            <field name="picker_id" position="before">
                <field name="picking_type_id"/>
            </field>
        </field>
    </record>

     <record id="stock_batch_picking_search_custom" model="ir.ui.view">
        <field name="name">batch.picking.search.custom</field>
        <field name="model">stock.batch.picking</field>
         <field name="inherit_id" ref="stock_batch_picking.stock_batch_picking_search"/>
        <field name="arch" type="xml">

                <field name="picker_id" position="before">
                    <field name="picking_type_id"/>
                </field>
                <xpath expr="//filter[@name='picker_id']" position="before">
                    <filter name="picking_type_id" string="Picking type" context="{'group_by':'picking_type_id'}"/>
                </xpath>



        </field>
    </record>
</odoo>
