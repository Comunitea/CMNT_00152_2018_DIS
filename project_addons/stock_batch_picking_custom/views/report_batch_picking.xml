<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <report string="Batch picking custom"
            id="action_report_batch_picking_custom"
            model="stock.batch.picking"
            report_type="qweb-pdf"
            name="stock_batch_picking_custom.report_batch_picking_custom"
            file="stock_batch_picking_custom.report_batch_picking_custom"/>

    <template id="report_batch_picking_custom">
        <t t-call="web.html_container">
            <t t-call="web.internal_layout">
                    <t t-foreach="docs" t-as="doc">
                        <div class="page">
                            <div class="row mt32 mb32">
                                <div class="col-xs-3">
                                    <strong>Date:</strong>
                                    <span t-esc="now()" t-options="{'widget': 'datetime'}"/>
                                </div>
                                <div class="col-xs-3">
                                    <strong>Order:</strong>
                                    <span t-field="doc.name"/>
                                </div>
                                <div class="col-xs-6">
                                    <strong>Picked By:</strong>
                                    <span t-field="doc.picker_id.name"/>
                                </div>
                            </div>

                        <t t-if="doc.notes">
                            <p t-esc="doc.notes"/>
                        </t>

                        <br/>
                            <t t-foreach="get_grouped_data(doc)" t-as="l0_data">
                                <table class="table table-condensed">
                                    <caption>
                                        <b>
                                            <u>
                                                <span t-esc="l0_data['name']"/>
                                            </u>
                                        </b>
                                    </caption>
                                    <thead>
                                        <th>Product</th>
                                        <th>Location</th>
                                        <th class="text-right">QTY</th>
                                        <!--<th>Explanation</th>-->
                                    </thead>
                                    <tbody>
                                        <t t-set="total_qty" t-value="0.0"/>
                                        <t t-foreach="l0_data['l1_items']" t-as="l1_item">
                                            <t t-set="product" t-value="l1_item['product']"/>
                                            <t t-set="location" t-value="l1_item['operations'][:1].location_id"/>
                                            <t t-set="qty" t-value="l1_item['product_qty']"/>
                                            <t t-set="total_qty" t-value="total_qty + qty"/>
                                            <t t-set="carrier" t-value="l1_item['operations'][:1].picking_id.carrier_id"/>

                                            <tr>
                                                <td>
                                                    <span t-field="product.display_name"/>
                                                </td>
                                                <td>
                                                    <span t-esc="location.name"/>
                                                </td>
                                                <td class="text-right">
                                                    <span t-esc="qty"/>
                                                </td>
                                                <!--<td>stock error<br/>breakage-->
                                                <!--</td>-->
                                                <tr align="left" t-if="product.description_warehouse">
                                                    <td colspan="4">
                                                        <pre class="description ">
                                                            <span t-esc="product.description_warehouse"></span>
                                                        </pre>
                                                    </td>
                                                </tr>
                                            </tr>
                                        </t>
                                    </tbody>
                                    <tfoot>
                                        <tr>
                                            <td/>
                                            <td id="total_label" class="text-right">
                                                <strong>Total:</strong>
                                            </td>
                                            <td id="total_qty" class="text-right">
                                                <strong t-esc="total_qty"/>
                                            </td>
                                        </tr>
                                    </tfoot>
                                </table>
                            </t>
                        </div>
                    </t>

            </t>
        </t>
    </template>
</odoo>
