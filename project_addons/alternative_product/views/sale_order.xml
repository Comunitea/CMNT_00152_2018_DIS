<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
    <record id="sale_order_alternative_product_ids" model="ir.ui.view">
        <field name="name">sale_order.alternative_products</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//tree/field[@name='currency_id']" position="after">
                <button name="action_show_alternative_products" string="Alternative products" type="object" icon="fa-american-sign-language-interpreting"
                        context="{'default_product_id': product_id, 'default_sale_order_line_id': id}"/>
            </xpath>


        </field>
    </record>



    </data>
</odoo>
