<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record model="report.paperformat" id="paperformat_autoradio_label">
        <field name="name">paperformat.autoradio.label</field>
        <field name="default" eval="True"/>
        <field name="format">custom</field>
        <field name="page_width">132</field>
        <field name="page_width">102</field>
        <field name="orientation">Portrait</field>
        <field name="margin_top">5</field>
        <field name="margin_right">5</field>
        <field name="margin_bottom">5</field>
        <field name="margin_left">5</field>
        <field name="header_line" eval="False"/>
        <field name="header_spacing">20</field>
        <field name="dpi">110</field>
    </record>

    <report
        id="autoradio_label_report"
        model="autoradio.picking.delivery"
        string="Autoradio Label"
        name="autoradio_soap_connector.autoradio_label_template"
        file="autoradio_soap_connector.autoradio_label_template"
        report_type="qweb-pdf"
        attachment_use="True"
        multi="False"
        paperformat="paperformat_autoradio_label"/>
        />

    <template id="autoradio_soap_connector.autoradio_label_template">
            <t t-call="web.html_container">
                <t t-foreach="docs_tag_data" t-as="tag_data">
                    <t t-foreach="tag_data" t-as="I">
                        <t t-set="I" t-value="I_index+1"/>
                        <t t-if="I &lt;= int(tag_data['bultos'])">
                            <t t-call="autoradio_soap_connector.autoradio_label_individual_template"/>
                        </t>
                    </t>
                </t>
            </t>
    </template>

    <template id="autoradio_soap_connector.autoradio_label_individual_template">
        <div class="page" style="font-weight: bold; font-family: Helvetica">
            <div class="oe_structure"/>
            <div class="col-md-1" style="float: left; font-size: 27px;">
                <div class="col-md-12">
                    A
                </div>
                <div class="col-md-12">
                    U
                </div>
                <div class="col-md-12">
                    T
                </div>
                <div class="col-md-12">
                    O
                </div>
                <div class="col-md-12">
                    R
                </div>
                <div class="col-md-12">
                    A
                </div>
                <div class="col-md-12">
                    D
                </div>
                <div class="col-md-12">
                    I
                </div>
                <div class="col-md-12">
                    O
                </div>
            </div>

            <div class="col-md-11" style="float: left; border-bottom: solid 2px black;">
                <div class="col-md-3" style="float: left;  font-size: 27px;" t-esc="tag_data['delgestora_pnumdel']"/>
                <div class="col-md-6" style="float: left;">
                    Exp: <span t-esc="tag_data['ref_envio']"/>
                </div>
                <div class="col-md-3" style="float: left;">
                    <span t-esc="tag_data['fecha']"/>
                </div>
            </div>

            <div class="col-md-11" style="float: left; border-bottom: solid 2px black;">
                <div class="col-md-12">
                    DESTINATARIO
                </div>
                <div class="col-md-10" style="float: left;" t-esc="tag_data['destinatario']"/>
                <div class="col-md-2" style="float: left;">
                    <span t-esc="tag_data['rutaentrega']" style="float:right;"/>
                </div>
                <div class="col-md-12" style="float: left;" t-esc="tag_data['direcciondes']"/>
                <div class="col-md-4" style="float: left;" t-esc="tag_data['cpdes']"/>
                <div class="col-md-4" style="float: left;" t-esc="tag_data['poblaciodes']"/>
                <div class="col-md-4" style="float: left;">
                    <span t-if="tag_data['tlfremi']" t-esc="tag_data['tlfdes']" style="float:right;"/>
                </div>
            </div>

            <div class="col-md-11" style="float: left; border-bottom: solid 2px black;">
                <div class="col-md-12">
                    REMITENTE
                </div>
                <div class="col-md-12" style="float: left;" t-esc="tag_data['remitente']"/>
                <div class="col-md-12" style="float: left;" t-esc="tag_data['direccionremi']"/>
                <div class="col-md-6" style="float: left;">
                    <span t-esc="tag_data['poblacionremi']"/> - <span t-esc="tag_data['cpremi']"/>
                </div>
                <div class="col-md-6" style="float: left;">
                    <span t-if="tag_data['tlfremi']" t-esc="tag_data['tlfremi']" style="float:right;"/>
                </div>
                <div class="col-md-12" style="float: left;">
                    Ref. Cliente: <span t-esc="tag_data['refcliente']"/>
                </div>
            </div>

            <div class="col-md-11" style="float: left; border-bottom: solid 2px black; min-height: 50px;">
                <div class="col-md-10" style="float: left;">
                    <div t-if="tag_data['obser']" class="col-md-12" style="float: left; padding-left: 0px;" t-esc="tag_data['obser']"/>
                    <div t-if="tag_data['ampliaobserv']" class="col-md-12" style="float: left; padding-left: 0px;" t-esc="tag_data['ampliaobserv']"/>
                </div>

                <div class="col-md-2" style="float: left; border-left: solid 2px black; min-height:50px;"/>
            </div>

            <div class="col-md-11" style="float: left; border-bottom: solid 2px black; font-size: 24px;">
                <div class="col-md-8" style="float: left;">
                    <div t-if="float(tag_data['reembolso']) != 0.0000">
                        Reembolso: <span t-esc="tag_data['reembolso']"/>
                    </div>
                </div>

                <div class="col-md-4" style="float: left; border-left: solid 2px black;">
                    <span t-esc="tag_data['tipoporte']"/>
                </div>
            </div>

            <!-- <div class="col-md-1" style="float: left; min-height: 10px;"/> -->

            <div class="col-md-11" style="float: left;">
                <div class="col-md-8" style="float: left;"/>
                <div class="col-md-4" style="float: left; border-left: solid 2px black;">
                    <span t-esc="tag_data['kilos']" style="font-size: 10px; float: right;"/>
                </div>
            </div>

            <div class="col-md-1" style="float: left; min-height: 10px;"/>

            <div class="col-md-11" style="float: left; border-bottom: solid 2px black;">
                <div class="col-md-8" style="float: left;">
                    <span t-esc="tag_data['servicio']" style="float: right;"/>
                </div>

                <div class="col-md-4" style="float: left; border-left: solid 2px black;">
                    <span t-esc="I"/>/<span t-esc="tag_data['bultos']"/>
                </div>
            </div>

            <div class="col-md-12" style="float: left; border-bottom: solid 2px black;">
                <div style="font-size:50px;" t-esc="tag_data['canaliza_descrip']"/>
            </div>

            <div class="col-md-12">
                <img alt="barcode" t-if="tag_data['ccbb']" t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s' % ('Code128', tag_data['ccbb'], 1200, 240)" style="max-width:100%; margin-top: 10px;" align="center"/>
            </div>
        </div>
        <div style="page-break-after: auto;"><span style="display: none;"> </span></div>
    </template>


</odoo>