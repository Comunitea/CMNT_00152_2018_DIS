<odoo>
     <record id="product_product_customer_ref_tree_view" model="ir.ui.view">
            <field name="name">product.product.customer.ref_tree_view</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="product.product_product_tree_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='default_code']" position="after">
                    <field name="customer_default_code" invisible="not context.get('customer_partner_id',False)"/>
                </xpath>
            </field>
     </record>
    <record model="ir.ui.view" id="product_form_view_customer_ref">
            <field name="name">product.product.curtomer_ref_form</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="product.product_normal_form_view"/>
            <field name="arch" type="xml">
                <data>

                    <button name="toggle_active" position="before">
                       <button string="Routes" type="object"
                            name="action_view_customer_refs"
                            class="oe_stat_button" icon="fa-cogs" groups="base.group_user"/>
                    </button>
                </data>
            </field>
        </record>
    <record id="action_routes_form" model="ir.actions.act_window">
            <field name="name">Routes</field>
            <field name="res_model">stock.location.route</field>
            <field name="type">ir.actions.act_window</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="stock_location_route_tree" />
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Click to add a route.
              </p>
                <p>You can define here the main routes that run through
                    your warehouses and that define the flows of your products. These
                    routes can be assigned to a product, a product category or be fixed
                    on procurement or sales order. </p>
            </field>
        </record>
    <record id="product_template_search_view_customer_ref" model="ir.ui.view">
        <field name="name">product.product.search.catalogue_code</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_search_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='pricelist_id']" position="before">
                <field name="partner_customer_value_id" widget="selection" context="{'customer_partner_id': self}" filter_domain="[]" /> <!-- Keep widget=selection on this field to pass numeric `self` value, which is not the case for regular m2o widgets! -->
            </xpath>
            <xpath expr="//field[@name='name']" position="after">
                <field string="Customer codes" name="product_customer_value_ids" />

            </xpath>
        </field>
    </record>



</odoo>
