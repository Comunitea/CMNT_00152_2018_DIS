<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
    <record id="sale_order_suggested_product_ids" model="ir.ui.view">
        <field name="name">sale_order.suggested_products</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='order_line']" position="before">
                <button name="action_show_suggested_products" class="oe_edit_only" string="suggested products" type="object" icon="fa-plus-circle"
                        context="{'default_partner_id': partner_id, 'product_ids': order_line, 'default_currency_id': currency_id, 'default_sale_order_id': id, 'default_total_amount': amount_untaxed}"/>
            </xpath>
            <xpath expr="//field[@name='order_line']/tree" position="attributes">
                <attribute name="editable">Top</attribute>

            </xpath>

        </field>
    </record>



    </data>
</odoo>
