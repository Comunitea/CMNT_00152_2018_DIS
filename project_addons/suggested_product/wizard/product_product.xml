<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_suggested_product_ids" model="ir.ui.view">
            <field name="name">view_product_suggested</field>
            <field name="model">product.suggested.wzd</field>
            <field name="arch" type="xml">
                <form string="Product">

                    <div>
                        <group>

                                 <h2>
                                    <field name="sale_order_id"  readonly="1"/>
                                </h2>
                                <spam>
                                    Suggested product for sale order.
                                </spam>
                        </group>
                    </div>

                    <div>
                        <group>
                            <group>
                                  <field name="partner_id"  readonly="1"/>
                            </group>
                            <group>
                                <field name="total_amount"  widget="monetary" readonly="1"/>
                                <field name="currency_id"  readonly="1" invisible="1"/>


                            </group>
                        </group>
                    </div>
                    <div>
                        <field name="suggested_product_ids" nolabel="1" >
                            <tree editable="bottom" create="0" decoration-success="selected==True" delete="false"
                                  decoration-muted="qty_available==0.00"
                                  decoration-danger="selected==True and qty_available==0.00">
                                <field name="selected"/>
                                <field name="product_qty"/>

                                <field name="product_id"/>
                                <field name="lst_price" widget="monetary"/>
                                <field name="max_price_unit"/>
                                <field name="min_price_unit"/>
                                <field name="currency_id"/>
                                <field name="qty_available"/>
                                <field name="max_uom_qty"/>
                                <field name="min_uom_qty"/>
                                <field name="line_count" invisible="1"/>
                                <field name="same_client" invisible="1"/>

                            </tree>
                        </field>

                        <field name="same_client_product_ids" nolabel="1">
                            <tree editable="top" create="0">
                                <field name="selected" invisible="1"/>
                                <field name="product_qty"/>
                                <field name="product_id"/>
                                <field name="lst_price"/>
                                <field name="avg_price_unit"/>
                                <field name="currency_id"/>
                                <field name="qty_available"/>
                                <field name="avg_uom_qty"/>
                                <field name="line_count"/>
                                <field name="same_client" invisible="1"/>
                            </tree>
                        </field>
                    </div>


                    <footer>
                    <button name="action_add_suggested_products"
                                        string="Mark to add to sale order"
                                        type="object"
                                        icon="fa-cart-arrow-down "/>
                    <button class="oe_link"
                            special="cancel"
                            string="Cancel"/>

                    </footer>
                </form>
            </field>
        </record>
    </data>
</odoo>

