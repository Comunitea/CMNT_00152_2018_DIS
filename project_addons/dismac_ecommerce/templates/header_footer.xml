    <!-- MODAL LOGIN -->
    <template id="account_modal_dismac" active="True" inherit_id="website.layout">
        <xpath expr="//footer" position="before">
            <div id="myaccount-overlay" class="account-overlay"></div>
            <div id="myAccount" class="account-sidebar ">
                <a href="javascript:void(0)" class="overlay" onclick="closeAccount()"></a>

                <div class="account-inner">
                    <div class="account-top">
                        <h3>My account</h3>
                        <div class="close-account">
                            <a href="javascript:void(0)" onclick="closeAccount()">
                                <i class="fa fa-times"></i>
                            </a>
                        </div>
                    </div>
                    <form t-if="website.user_id == user_id" class="theme-form" role="form" method="post" onsubmit="this.action = '/web/login' + location.hash" action="/web/login">
                        <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()" />
                        <div class="form-group">
                            <label for="login">Email</label>
                            <input type="text" name="login" class="form-control" id="login" placeholder="Email" required="required" />
                        </div>
                        <div class="form-group">
                            <label for="password">Password</label>
                            <input type="password" name="password" class="form-control" id="password" placeholder="Enter your password" required="required" />
                        </div>
                        <div class="form-check">
                            <input type="checkbox" value="accepted" id="privacy_policy" name="privacy_policy" class="o_website_form_input form-check-input" required="required"/>
                            <label class="form-check-label" for="privacy_policy">
                                <span class="acceptance_full">
                                    Acepto los <a href="https://www.dismac.es/avisos-legales" alt="Enlace avisos legales" title="Avisos Legales" rel="noindex, nofollow" target="_blank">avisos legales</a>, la <a href="https://www.dismac.es/politica-de-cookies" alt="Enlace política de cookies" title="Política de Cookies" rel="noindex, nofollow" target="_blank">política de cookies</a>, y la <a href="https://www.dismac.es/politica-de-privacidad" alt="Enlace política de privacidad" title="Política de Privacidad" rel="noindex, nofollow" target="_blank">política de privacidad</a> de este sitio web.
                                </span>
                            </label>
                        </div>
                        <input type="hidden" name="redirect" t-att-value="redirect" />
                        <input type="hidden" name="token" t-att-value="token" />
                        <div class="form-group">
                            <input type="submit" class="btn btn-rounded btn-block" value="Login" />
                        </div>
                        <div>
                            <h5 class="forget-class">
                                <a t-attf-href="/web/reset_password" class="d-block">Have you forgotten your password?</a>
                            </h5>
                            <h6 class="forget-class">
                                <a href="/web/signup?redirect=/" class="d-block">You are new? Sign up </a>
                            </h6>
                        </div>
                    </form>
                    <div t-if="website.user_id != user_id" class="account-body">
                        <ul>
                            <li><a role="menuitem" href="/my/orders">Sale Order</a></li>
                            <li><a role="menuitem" href="/my/home">My Account</a></li>
                        </ul>
                        <p>
                            <a href="/web/session/logout?redirect=/" class="btn btn-primary btn-logout">Logout</a>
                        </p>
                    </div>
                </div>
            </div>
            <!-- Add to account bar end-->
        </xpath>
    </template>
</odoo>
