<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- ===================== Header OPTIONS ======================== -->
    <template id="header_layout_css" name="header_layout_scss" inherit_id="website.assets_frontend" active="True">
        <xpath expr="." position="inside">
            <link href="/dismac_ecommerce/static/src/scss/options/header-option/header_style.scss" rel="stylesheet" type="text/scss" />
        </xpath>
    </template>


    <!-- ===================== Footer OPTIONS ======================== -->
    <template id="footer_layout_css" name="footer_layout_scss" inherit_id="website.assets_frontend" active="True">
        <xpath expr="." position="inside">
            <link href="/dismac_ecommerce/static/src/scss/options/footer-option/footer_style.scss" rel="stylesheet" type="text/scss" />
        </xpath>
    </template>

    <!-- ===================== Header OPTIONS ======================== -->

    <template id="header_layout" active="True" inherit_id="website.layout">
        <xpath expr="//header/nav[hasclass('navbar-expand-md')]" position="before">
            <div class="top-header">
                <div class="header-top-bar">
                    <div class="custom-container">
                        <div class="row">
                            <div class="col-xl-5 col-md-7 col-sm-6">
                                <div class="top-header-left logo">
                                    <a href="/">
                                        <span t-field="website.logo" t-options="{'widget': 'image'}" t-attf-aria-label="Logo of {{website.name}}" t-att-title="website.name" />
                                    </a>
                                </div>
                            </div>
                            <div class="col-xl-7 col-md-5 col-sm-6">
                                <div class="top-header-right">
                                    <div class="top-menu-block">
                                        <ul>
                                            <t t-foreach="website.menu_id.child_id" t-as="submenu">
                                                <t t-if="submenu.is_top_menu" t-call="dismac_ecommerce.submenu">
                                                    <t t-set="item_class" t-value="'o_dismac_top_nav_item'" />
                                                    <t t-set="link_class" t-value="'o_dismac_top_nav_link'" />
                                                </t>
                                            </t>
                                        </ul>
                                    </div>
                                </div>
                                <div id="o_dismac_top_menu" class="o_dismac_top_menu_sidenav">
                                    <ul>
                                        <li class="o_dismac_top_menu_closebtn">
                                            <a href="javascript:void(0)" onclick="o_dismac_top_menu_closeNav()">X</a>
                                        </li>
                                        <t t-foreach="website.menu_id.child_id" t-as="submenu">
                                            <t t-if="submenu.is_top_menu" t-call="dismac_ecommerce.submenu"></t>
                                        </t>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>


            <div class="middle-header-bar layout-header2">
                <div class="custom-container">
                    <div class="row align-items-center">
                        <div class="col-sm-8 col-md-8 col-lg-8">
                            <div class="h-col h-search">
                                <div class="as-search">
                                    <form action='/shop' method="get" class="o_dismac_search_form">
                                        <div class="input-group ">
                                            <div class="input-group-prepend">
                                                <span class="search">
                                                    <i class="fa fa-search"></i>
                                                </span>
                                            </div>
                                            <input type="text" name="search" class="form-control" placeholder="Buscar producto" t-att-value="search" />
                                        </div>
                                    </form>
                                </div>
                            </div> <!-- .h-col h-search -->
                        </div> <!-- col -->
                        <div class="col-sm-4 col-md-4 col-lg-4">
                            <div class="ht-right">
                                <t t-set="website_sale_order" t-value="website.sale_get_order()" />
                                <div id="my_cart" class="h-col h-cart">
                                    <div class="my_cart_btn hc-icon">
                                        <i class="fa fa-shopping-cart"></i>
                                        <sup t-attf-class="my_cart_quantity label badge-primary" t-esc="website_sale_order and website_sale_order.cart_quantity or 0" />
                                    </div>
                                    <div class="h-cart-text">Carrito</div>
                                </div>
                            </div> <!-- .ht-right -->
                        </div> <!-- col -->
                    </div> <!-- row -->
                    <div class="mobile-menu-block">
                        <div class="mobile-toggle">
                            <button class="mobile_toggle_menu">
                                <span></span>
                                <span></span>
                                <span></span>
                            </button>
                            <button class="mobile_toggle_menu close-menu"></button>
                        </div>
                        <div class="menu-nav">
                            <span onclick="o_dismac_top_menu_openNav()" class="toggle-nav">
                                <i class="fa fa-plus-circle"></i>
                            </span>
                            <button id="o_dismac_top_menu_close-menu" onclick="o_dismac_top_menu_closeNav()" class="o_dismac_top_menu_close-menu"></button>
                        </div>


                    </div>
                </div>
            </div>
            <div class="cart_lines_popup" />

        </xpath>
    </template>

    <template id="dismac_second_menu" inherit_id="website.layout" name="Secondary Dismac Menu">
        <xpath expr="//header//nav" position="replace">
            <t t-set="is_connected" t-value="not user_id._is_public()" />
            <nav class="navbar navbar-expand-md navbar-light bg-light o_dismac_menu_bg">
                <div id="top_menu_container" class="container">
                    <div id="top_menu_collapse" class="collapse navbar-collapse order-last order-lg-0">
                        <ul>
                            <li class="o_dismac_middle_menu_closebtn">
                                <a href="javascript:void(0)" onclick="o_dismac_top_menu_closeNav()">X</a>
                            </li>
                            <t t-foreach="website.menu_id.child_id" t-as="submenu">
                                <t t-if="submenu.is_middle_menu" t-call="dismac_ecommerce.submenu">
                                    <t t-set="item_class" t-value="'o_dismac_item'" />
                                    <t t-set="link_class" t-value="'nav-link'" />
                                </t>
                            </t>
                        </ul>
                    </div>
                    <div class="icon-block">
                        <ul>
                            <li class="mobile-user onhover-dropdown">
                                <a onclick="openAccount()">
                                    <i class="fa fa-user"></i>
                                </a>
                            </li>
                            <t t-if="request.env.ref('dismac_ecommerce.add_to_wishlist').active">
                                <t t-set='wishcount' t-value="len(request.env['product.wishlist'].current())" />
                                <li class="mobile-wishlist">
                                    <a href="/shop/wishlist">
                                        <i class="fa fa-heart"></i>
                                        <div class="cart-item">
                                            <div>
                                                <t t-esc='wishcount' />
                                                productos
                                                <span>favoritos</span>
                                            </div>
                                        </div>
                                    </a>
                                </li>
                            </t>
                        </ul>
                    </div>
                    <div class="contact-block">
                        <div>
                            <i class="fa fa-volume-control-phone"></i>
                            <span>986 46 98 98</span>
                        </div>
                    </div>
                    <div class="tablet-toggle">
                        <button class="mobile_toggle_menu">
                            <span></span>
                            <span></span>
                            <span></span>
                        </button>
                        <button class="mobile_toggle_menu close-menu"></button>
                    </div>
                </div>
                <div class="oe_structure oe_structure_solo" id="oe_structure_header_default_1" />
            </nav>
        </xpath>
    </template>

