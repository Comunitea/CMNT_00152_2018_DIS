<odoo>
    <record id="view_production_lot__text_form" model="ir.ui.view">
            <field name="name">production_lot_text</field>
            <field name="model">stock.production.lot</field>
            <field name="inherit_id" ref="stock.view_production_lot_form"/>
            <field name="arch" type="xml">
                <xpath expr="//group[@name='main_group']" position="after">
                    <group string="Related Lots">
                        <field name="related_lots" nolabel="1"/>
                    </group>
                </xpath>
            </field>
     </record>

</odoo>
