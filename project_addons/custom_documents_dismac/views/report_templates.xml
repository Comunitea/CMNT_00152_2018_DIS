<?xml version="1.0" encoding="utf-8"?>
<odoo>

<!-- CABECERA  header layout -->
    <template id="header_layout_custom">
        <div class="header">
            <div class="row">
                <div class="col-xs-3 mb4">
                    <img t-if="o.company_id.logo" t-att-src="'data:image/png;base64,%s' % to_text(o.company_id.logo)" style="max-height: 25px;"/>
                </div>
                <br/>
                <div class="col-xs-9 text-right" style="margin-top:22px;" t-field="o.company_id.report_header" name="moto"/>
            </div>
            <div t-if="o.company_id.logo or o.company_id.report_header" class="row zero_min_height">
                <div class="col-xs-12">
                    <div/>
                </div>
            </div>
            <div class="row">
                <div class="col-xs-6" name="company_address">
                    <span t-field="o.company_id.partner_id"
                        t-field-options='{"widget": "contact", "fields": ["address", "name"], "no_marker": true}'/>
                        CIF: <span t-field="o.company_id.vat"/>
                </div>
                <div  class="text-right">
                    <div> Telf. <span t-field="o.company_id.phone"/></div>
                    <div><span t-field="o.company_id.website"/></div>
                    <div>email: <span t-field="o.company_id.email"/></div>
                </div>
            </div>
        </div>
    </template>

<!-- PIE footer layout  -->

    <template id="footer_layout_custom">
        <div class="text-center" style="border-top: 1px solid black;">
            <div class="text-muted">
                <p>Inscrita en el Registro Mercantil de Pontevedra, Folio 206, Libro 765 Soc, Inscrip. 3a Hoja PO-5165</p>
            </div>
        </div>
    </template>

    <template id="footer_budget_layout_custom">
        <div class="row">
            <div class="col-xs-8" style="font-size: 70%;">Inscrita en el Registro Mercantil de Pontevedra,
            Folio 206, Libro 765 Soc, Inscrip. 3a Hoja PO-5165</div>
            <div class="col-xs-2 col-xs-offset-2 text-right" style="font-size: 70%;">I.V.A. no incluido.</div>
        </div>
        <div class="row">
            <div class="col-xs-4 col-xs-offset-8 text-right" style="font-size: 70%;">Validez del presupuesto: 30 d√≠as</div>
        </div>
        <div class="row">
            <div class="col-xs-4 col-xs-offset-8 text-right" style="font-size: 70%;">Esta sujeto a las fluctuaciones del mercado.</div>
        </div>
    </template>

</odoo>
