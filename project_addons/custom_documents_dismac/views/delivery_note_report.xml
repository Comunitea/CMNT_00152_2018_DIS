<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <template id="report_delivery_note_document">

            <div class="article o_report_layout_standard">
                <t t-call="custom_documents_dismac.header_layout_custom"/>
                <!--CUERPO-->
                <div class="row">
                    <div class="col-xs-5" style="text-center">
                        <div><strong>PRESUPUESTO</strong></div>
                        <div>NÚMERO : <span t-field="o.name"/></div>
                        <div>FECHA : <span t-field="o.scheduled_date"/></div>
                        <div>PROVEEDOR Nº : ????</div>
                    </div>

                    <div class="col-xs-5 col-xs-offset-2">
                        <div  style="border: 1px solid black; padding: 4px;">
                            <div><span t-field="o.partner_id.name"/></div>
                            <div><span t-field="o.partner_id.street"/></div>
                            <div><span t-field="o.partner_id.city"/></div>
                            <div><span t-field="o.partner_id.state_id"/> <span t-field="o.partner_id.zip"/></div>
                            <div>TLF: <span t-field="o.partner_id.phone"/></div>
                            <div>CIF: <span t-field="o.partner_id.vat"/></div>
                        </div>
                    </div>
                </div>
                <br/>
                <div class="row">
                    <div class="col-xs-6">REF.CLIENTE: <span t-field="o.partner_id.ref"/></div>
                    <div class="col-xs-6"> COMERCIAL: ???</div>
                </div>
                <br/>

                <!--TABLA-->

                    <table class="table table-condensed">
                        <thead style="border: 1px solid black;">
                            <tr>
                                <th style="border: 1px solid black;">REFERENCIA</th>
                                <th style="border: 1px solid black;">DESCRIPCIÓN</th>
                                <th style="border: 1px solid black;">CANTIDAD</th>
                                <th style="border: 1px solid black;">PRECIO</th>
                                <th class="text-right" style="border: 1px solid black;">IVA</th>
                                <th class="text-right" style="border: 1px solid black;">TOTAL</th>
                            </tr>
                       </thead>
                       <tbody class="order_tbody">
                            <t t-foreach="o.move_lines" t-as="m_line">

                                <tr>
                                    <td>
                                        <span t-field="m_line.product_id.default_code"/>
                                    </td>
                                    <td>
                                        <span t-field="m_line.product_id"/>
                                    </td>
                                    <td>
                                        <span t-field="m_line.product_uom_qty"/>
                                    </td>
                                    <td>
                                        <span t-field="m_line.price_unit"/>
                                    </td>
                                    <td class="text-right">
                                       ??
                                    </td>
                                    <td class="text-right">
                                        ??
                                    </td>
                                </tr>
                            </t>

                        </tbody>
                    </table>
<div class="clearfix">
                        <div class="row" name="total">
                            <div class="col-xs-4 pull-right">
                                <table class="table table-condensed" style="min-width: 200px;max-width: 350px;">
                                    <tr class="border-black" style="border-bottom:1px solid #dddddd;">
                                        <td><strong>Subtotal</strong></td>
                                        <td class="text-right">
                                            <span t-field="o.amount_untaxed"
                                                />
                                        </td>
                                    </tr>
                                    <t t-foreach="o._get_tax_amount_by_group()" t-as="amount_by_group">
                                        <tr style="border-bottom:1px solid #dddddd;">
                                            <t t-if="amount_by_group[3] == 1 and o.amount_untaxed == amount_by_group[2]">
                                                <td>
                                                    <span t-esc="amount_by_group[0]"/>
                                                    <span>&amp;nbsp;<span>on</span>&amp;nbsp;<t t-esc="amount_by_group[2]"/></span>
                                                </td>
                                                <td class="text-right">
                                                    <span t-esc="amount_by_group[1]"/>
                                                </td>
                                            </t>
                                            <t t-else ="">
                                                <td>
                                                    <span t-esc="amount_by_group[0]"/>
                                                </td>
                                                <td class="text-right">
                                                    <span t-esc="amount_by_group[1]"/>
                                                </td>
                                            </t>
                                        </tr>
                                    </t>
                                    <tr class="border-black">
                                        <td><strong>Total</strong></td>
                                        <td class="text-right">
                                            <span t-field="o.amount_total"/>
                                        </td>
                                    </tr>
                                </table>
                            </div>
                        </div>
                    </div>



                <div class="row">
                    <div class="col-xs-4" style="font-size: 60%;">Inscrita en el Registro Mercantil de Pontevedra, Folio 206, Libro 765 Soc, Inscrip. 3a Hoja PO-5165</div>
                    <div class="col-xs-4 col-xs-offset-1" style="font-size: 60%;">No se admiten reclamaciones una vez pasadas 24 horas de la recepción o instalación de la mercancía</div>
                    <div class="col-xs-2 col-xs-offset-1" style="font-size: 60%;">Conforme el cliente</div>
                </div>
            </div>

        </template>


        <template id="delivery_note_report">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="o">
                    <t t-call="custom_documents_dismac.report_delivery_note_document" t-lang="o.partner_id.lang"/>
                </t>
            </t>
        </template>


    </data>
</odoo>
