<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <template id="report_invoice_pro_document">

            <div class="article o_report_layout_standard">
                <t t-call="custom_documents_dismac.header_layout_custom"/>
                <!-- CUERPO FACTURA -->
                <div>
                    <div class="row" >
                        <div name="invoice_address" class="col-xs-6">
                            <p><strong>Dirección de Facturación</strong></p>
                            <div style="border: 1px solid black; padding: 4px;">
                                <address t-field="o.partner_id"
                                    t-options='{"widget": "contact", "fields": ["address", "name"], "no_marker": True}' />
                                <div t-if="o.partner_id.vat" class="mt16"><t t-esc="o.company_id.country_id.vat_label or 'TIN'"/>: <span t-field="o.partner_id.vat"/></div>
                            </div>
                        </div>

                        <div name="invoice_address" class="col-xs-6">
                            <p><strong>Dirección Postal</strong></p>
                            <div style="border: 1px solid black; padding: 4px;">
                                <address t-field="o.partner_id"
                                    t-options='{"widget": "contact", "fields": ["address", "name"], "no_marker": True}' />
                                <div t-if="o.partner_id.vat" class="mt16"><t t-esc="o.company_id.country_id.vat_label or 'TIN'"/>: <span t-field="o.partner_id.vat"/></div>
                            </div>
                        </div>
                    </div>
                    <br/>
                    <div class="col-xs-4 col-xs-offset-4 row text-center"><strong>FACTURA PROFORMA</strong></div>
                    <br/><br/>
                    <div class="row">
                        <div class="col-xs-2 col-xs-offset-2 text-center">NÚMERO</div>
                        <div class="col-xs-2 text-center">FECHA</div>
                        <div class="col-xs-2 text-center">COMERCIAL</div>
                        <div class="col-xs-2 text-center">PROVEEDOR Nº</div>
                    </div>
                    <div class="row">
                        <div class="col-xs-2 col-xs-offset-2 text-center"><span t-field="o.name"/></div>
                        <div class="col-xs-2 text-center"><span t-field="o.confirmation_date"/></div>
                        <div class="col-xs-2 text-center"><span t-field="o.user_id"/></div>
                        <div class="col-xs-2 text-center"></div>
                    </div>
                    <br/><br/>
                    <table class="table-condensed col-xs-12">
                        <thead style="border: 1px solid black;">
                            <tr>
                                <th style="border: 1px solid black;">DESCRIPCIÓN</th>
                                <th style="border: 1px solid black;">CANTIDAD</th>
                                <th style="border: 1px solid black;">PRECIO</th>
                                <th class="text-right" style="border: 1px solid black;">IVA</th>
                                <th class="text-right" style="border: 1px solid black;">TOTAL</th>
                            </tr>
                       </thead>
                       <tbody class="order_tbody">
                            <t t-foreach="o.order_line" t-as="o_line">
                                <tr>
                                    <td>
                                        <span t-field="o_line.name"/>
                                    </td>
                                    <td>
                                        <span t-field="o_line.product_uom_qty"/>
                                    </td>
                                    <td>
                                        <span t-field="o_line.price_unit"/>
                                    </td>
                                    <td class="text-right">
                                        <span t-field="o_line.tax_id.amount"/>
                                    </td>
                                    <td class="text-right">
                                        <span t-field="o_line.price_total"/>
                                    </td>
                                </tr>
                            </t>
                        </tbody>
                    </table>
                    <div class="clearfix">
                        <div class="row" name="total">
                            <div class="col-xs-4 pull-right">
                                <table class="table table-condensed" style="min-width: 200px;max-width: 350px;">
                                    <tr class="border-black" style="border-bottom:1px solid #dddddd;">
                                        <td><strong>Subtotal</strong></td>
                                        <td class="text-right">
                                            <span t-field="o.amount_untaxed"
                                                />
                                        </td>
                                    </tr>
                                    <t t-foreach="o._get_tax_amount_by_group()" t-as="amount_by_group">
                                        <tr style="border-bottom:1px solid #dddddd;">
                                            <t t-if="amount_by_group[3] == 1 and o.amount_untaxed == amount_by_group[2]">
                                                <td>
                                                    <span t-esc="amount_by_group[0]"/>
                                                    <span>&amp;nbsp;<span>on</span>&amp;nbsp;<t t-esc="amount_by_group[2]"/></span>
                                                </td>
                                                <td class="text-right">
                                                    <span t-esc="amount_by_group[1]"/>
                                                </td>
                                            </t>
                                            <t t-else ="">
                                                <td>
                                                    <span t-esc="amount_by_group[0]"/>
                                                </td>
                                                <td class="text-right">
                                                    <span t-esc="amount_by_group[1]"/>
                                                </td>
                                            </t>
                                        </tr>
                                    </t>
                                    <tr class="border-black">
                                        <td><strong>Total</strong></td>
                                        <td class="text-right">
                                            <span t-field="o.amount_total"/>
                                        </td>
                                    </tr>
                                </table>
                            </div>
                        </div>
                    </div>



                </div>


                <div class = "row">
                    <div class="col-xs-6 col-xs-offset-6" style="font-size: 60%;"><p>Validez del presupuesto: 30 días.
                                                                                    Está sujeto a las fluctuaciones del mercado.
                                                                                    Inscrita en el Registro Mercantil de Pontevedra,
                                                                                    Folio 206, Libro 765 Soc, Inscrip. 3a Hoja PO-5165
                                                                                    </p></div>
                </div>


                <br/>
                <t t-call="custom_documents_dismac.footer_layout_custom"/>
            </div>



        </template>


         <template id="report_invoice_pro">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="o">
                    <t t-call="custom_documents_dismac.report_invoice_pro_document" t-lang="o.partner_id.lang"/>
                </t>
            </t>
        </template>


    </data>
</odoo>
