<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <template id="report_invoice_document" inherit_id="account.report_invoice_document">
            <xpath expr="//t[@t-set='address']" position="replace"/>
            <xpath expr="//h2" position="before">
                <div class="address row" >
                    <div name="invoice_address" class="col-xs-6">
                        <p><strong>Dirección de Facturación</strong></p>
                        <div style="border: 1px solid black; padding: 4px;">
                            <address t-field="o.partner_id"
                                t-options='{"widget": "contact", "fields": ["address", "name"], "no_marker": True}' />
                            <div t-if="o.partner_id.vat" class="mt16"><t t-esc="o.company_id.country_id.vat_label or 'TIN'"/>: <span t-field="o.partner_id.vat"/></div>
                        </div>
                    </div>

                    <div name="invoice_address" class="col-6">
                        <p><strong>Dirección Postal</strong></p>
                        <div style="border: 1px solid black; padding: 4px;">
                            <address t-field="o.partner_id"
                                t-options='{"widget": "contact", "fields": ["address", "name"], "no_marker": True}' />
                            <div t-if="o.partner_id.vat" class="mt16"><t t-esc="o.company_id.country_id.vat_label or 'TIN'"/>: <span t-field="o.partner_id.vat"/></div>
                        </div>
                    </div>
                </div>
                <br/>
            </xpath>

            <xpath expr="//div[@id='informations']" position="replace">
                </xpath>

            <xpath expr="//h2" position="replace">
                <div class="col-4 offset-4 row text-center"><strong>FACTURA</strong></div>
                <br/><br/>
                <div class="row">
                    <div class="col-2 offset-2 text-center">NÚMERO</div>
                    <div class="col-2 text-center">FECHA</div>
                    <div class="col-2 text-center">COMERCIAL</div>
                    <div class="col-2 text-center">PROVEEDOR Nº</div>
                </div>
                <div class="row">
                    <div class="col-2 offset-2 text-center"><span t-field="o.number"/></div>
                    <div class="col-2 text-center"><span t-field="o.date_invoice"/></div>
                    <div class="col-2 text-center"><span t-field="o.user_id"/></div>
                    <div class="col-2 text-center"></div>

                </div>
                <br/>
            </xpath>

            <xpath expr="//table[@class='table table-sm o_main_table']/thead/tr" position="replace">
               <tr style="border-bottom: 1px solid black">
                    <th class="text-right">DESCRIPCIÓN</th>
                    <th class="text-right">CANTIDAD</th>
                    <th class="text-right">PRECIO</th>
                    <th class="text-left">IVA</th>
                    <th >TOTAL</th>
                </tr>
            </xpath>


            <xpath expr="//table[@class='table table-sm o_main_table']/tbody/t[@t-foreach='o.invoice_line_ids']/tr/t/td[6]" position="replace">
                <td t-attf-class="text-left {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}">
                        <span t-esc="', '.join(map(lambda x: (x.name), line.invoice_line_tax_ids))"/>
                </td>
            </xpath>

            <xpath expr="//p[2]" position="replace"></xpath>
            <xpath expr="//p[3]" position="replace">
                <div class = "row">
                    <div class="col-xs-3"><strong>VENCIMIENTOS:</strong></div>
                    <div class="col-xs-5"><span t-field="o.expiration_dates_str"/></div>
                </div>
                <div class = "row">
                    <div class="col-xs-3"><strong>FORMA DE PAGO:</strong></div>
                    <div class="col-xs-5"><span t-field="o.payment_mode_id"/></div>
                </div>
                <div class = "row">
                    <div class="col-xs-3"><strong>DATOS BANCARIOS:</strong></div>
                    <div class="col-xs-5"><span t-field="o.partner_bank_id"/></div>
                </div>
                <div class = "row">
                    <div class="col-xs-5 col-xs-offset-3"></div>
                </div>
                <div class = "row">
                    <div class="col-xs-6 col-xs-offset-6" style="font-size: 60%;"><p>RESERVA DE DOMINIO. El material entregado continuará en propiedad de PAZ-DISMAC, S.L.
                                            hasta el total pago de su importe, quedando mientras tanto en depósito por cuenta y riesgo del
                                            Cliente que actúa en calidad de depositario conforme el artículo 206 del Código de Comercio.
                                            </p></div>
                    </div>

                <br/>
            </xpath>


        </template>


    </data>
</odoo>
