<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <template id="report_invoice_document">

            <div class="article o_report_layout_standard">
                <t t-call="custom_documents_dismac.header_layout_custom"/>
                <!-- CUERPO FACTURA -->
                <div>
                    <div class="row" >
                        <div name="invoice_address" class="col-xs-4 col-xs-offset-1">
                            <p><strong>Dirección de Facturación</strong></p>
                            <div style="border: 1px solid black; padding: 4px;">
                                <address t-field="o.partner_id"
                                    t-options='{"widget": "contact", "fields": ["address", "name"], "no_marker": True}' />
                                <div t-if="o.partner_id.vat" class="mt16"><t t-esc="o.company_id.country_id.vat_label or 'TIN'"/>: <span t-field="o.partner_id.vat"/></div>
                            </div>
                        </div>

                        <div name="invoice_address" class="col-xs-4 col-xs-offset-2">
                            <p><strong>Dirección Postal</strong></p>
                            <div style="border: 1px solid black; padding: 4px;">
                                <address t-field="o.partner_id"
                                    t-options='{"widget": "contact", "fields": ["address", "name"], "no_marker": True}' />
                                <div t-if="o.partner_id.vat" class="mt16"><t t-esc="o.company_id.country_id.vat_label or 'TIN'"/>: <span t-field="o.partner_id.vat"/></div>
                            </div>
                        </div>
                    </div>
                    <br/>
                    <div class="col-xs-4 col-xs-offset-4 row text-center"><strong>FACTURA</strong></div>
                    <br/><br/>
                    <div class="row">
                        <div class="col-xs-2 col-xs-offset-2 text-center">NÚMERO</div>
                        <div class="col-xs-2 text-center">FECHA</div>
                        <div class="col-xs-2 text-center">COMERCIAL</div>
                        <div class="col-xs-2 text-center">PROVEEDOR Nº</div>
                    </div>
                    <div class="row">
                        <div class="col-xs-2 col-xs-offset-2 text-center"><span t-field="o.number"/></div>
                        <div class="col-xs-2 text-center"><span t-field="o.date_invoice"/></div>
                        <div class="col-xs-2 text-center"><span t-field="o.user_id"/></div>
                        <div class="col-xs-2 text-center">????</div>
                    </div>
                    <br/><br/>
                    <t t-foreach="o.order_lines_layouted()" t-as="page">
                    <table class="table table-condensed">
                        <thead style="border: 1px solid black;">
                            <tr>
                                <th style="border: 1px solid black;">REFERENCIA</th>
                                <th style="border: 1px solid black;">DESCRIPCIÓN</th>
                                <th style="border: 1px solid black;">CANTIDAD</th>
                                <th style="border: 1px solid black;">PRECIO</th>
                                <th class="text-right" style="border: 1px solid black;">IVA</th>
                                <th class="text-right" style="border: 1px solid black;">TOTAL</th>
                            </tr>
                       </thead>
                       <tbody class="order_tbody">
                            <t t-foreach="page" t-as="layout_category">

                                <t t-if="layout_category_size > 1 or page_size > 1" groups="sale.group_sale_layout">
                                    <tr class="active">
                                        <td colspan="7" style="font-weight: bold;">&amp;bull;
                                            <t t-esc="layout_category['name']"/>
                                        </td>
                                    </tr>
                                </t>

                                <t t-foreach="layout_category['lines']" t-as="l">
                                    <tr>
                                        <td>
                                            <span t-field="l.product_id.default_code"/>
                                        </td>
                                        <td>
                                            <span t-field="l.product_id"/>
                                        </td>
                                        <td>
                                            <span t-field="l.quantity"/>
                                        </td>
                                        <td>
                                            <span t-field="l.price_unit"/>
                                        </td>
                                        <td class="text-right">
                                            <span t-field="l.invoice_line_tax_ids.amount"/>
                                        </td>
                                        <td class="text-right">
                                            <span t-field="l.price_total"/>
                                        </td>
                                    </tr>
                                </t>
                            </t>
                        </tbody>
                    </table>
                    <div class="clearfix">
                        <div class="row" name="total">
                            <div class="col-xs-4 pull-right">
                                <table class="table table-condensed" style="min-width: 200px;max-width: 350px;">
                                    <tr class="border-black" style="border-bottom:1px solid #dddddd;">
                                        <td><strong>Subtotal</strong></td>
                                        <td class="text-right">
                                            <span t-field="o.amount_untaxed"
                                                />
                                        </td>
                                    </tr>
                                    <t t-foreach="o._get_tax_amount_by_group()" t-as="amount_by_group">
                                        <tr style="border-bottom:1px solid #dddddd;">
                                            <t t-if="amount_by_group[3] == 1 and o.amount_untaxed == amount_by_group[2]">
                                                <td>
                                                    <span t-esc="amount_by_group[0]"/>
                                                    <span>&amp;nbsp;<span>on</span>&amp;nbsp;<t t-esc="amount_by_group[2]"/></span>
                                                </td>
                                                <td class="text-right">
                                                    <span t-esc="amount_by_group[1]"/>
                                                </td>
                                            </t>
                                            <t t-else ="">
                                                <td>
                                                    <span t-esc="amount_by_group[0]"/>
                                                </td>
                                                <td class="text-right">
                                                    <span t-esc="amount_by_group[1]"/>
                                                </td>
                                            </t>
                                        </tr>
                                    </t>
                                    <tr class="border-black">
                                        <td><strong>Total</strong></td>
                                        <td class="text-right">
                                            <span t-field="o.amount_total"/>
                                        </td>
                                    </tr>
                                </table>
                            </div>
                        </div>
                    </div>

                    </t>
                </div>

                <div class = "row">
                    <div class="col-xs-3"><strong>VENCIMIENTOS:</strong></div>
                    <div class="col-xs-5"> ???</div>
                </div>
                <div class = "row">
                    <div class="col-xs-3"><strong>FORMA DE PAGO:</strong></div>
                    <div class="col-xs-5"><span t-field="o.payment_mode_id"/></div>
                </div>
                <div class = "row">
                    <div class="col-xs-3"><strong>DATOS BANCARIOS:</strong></div>
                    <div class="col-xs-5">???</div>
                </div>
                <div class = "row">
                    <div class="col-xs-5 col-xs-offset-3">???</div>
                </div>
                <div class = "row">
                    <div class="col-xs-6 col-xs-offset-6" style="font-size: 60%;"><p>RESERVA DE DOMINIO. El material entregado continuará en propiedad de PAZ-DISMAC, S.L.
                                            hasta el total pago de su importe, quedando mientras tanto en depósito por cuenta y riesgo del
                                            Cliente que actúa en calidad de depositario conforme el artículo 206 del Código de Comercio.
                                            </p></div>
                    </div>

                <br/>
                <t t-call="custom_documents_dismac.footer_layout_custom"/>
            </div>



        </template>


         <template id="report_invoice">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="o">
                    <t t-call="custom_documents_dismac.report_invoice_document" t-lang="o.partner_id.lang"/>
                </t>
            </t>
        </template>


    </data>
</odoo>
