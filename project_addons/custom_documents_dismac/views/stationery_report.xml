<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <template id="report_budget_stationery_document">

            <div class="article o_report_layout_standard">
                <t t-call="custom_documents_dismac.header_layout_custom"/>
                <!--CUERPO-->
                <div class="row">
                    <div class="col-5" style="text-center">
                        <div><strong>PRESUPUESTO</strong></div>
                        <div>NÚMERO : <span t-field="o.name"/></div>
                        <div>FECHA : <span t-field="o.confirmation_date"/></div>
                    </div>

                    <div class="col-5 offset-2">
                        <div style="border: 1px solid black; padding: 4px;">
                            <div><span t-field="o.partner_id.name"/></div>
                            <div><span t-field="o.partner_id.street"/></div>
                            <div><span t-field="o.partner_id.city"/></div>
                            <div><span t-field="o.partner_id.state_id"/> <span t-field="o.partner_id.zip"/></div>
                            <div>TLF: <span t-field="o.partner_id.phone"/></div>
                            <div>CIF: <span t-field="o.partner_id.vat"/></div>
                        </div>
                    </div>
                </div>
                <br/>
                <div class="row">
                    <div class="col-6">REF.CLIENTE: <span t-field="o.partner_id.ref"/></div>
                    <div class="col-6"> COMERCIAL: <span t-field="o.user_id"/></div>
                </div>
                <br/>

                <!--TABLA-->

                    <table class="table table-sm o_main_table col-12">
                        <thead style="border: 1px solid black;">
                            <tr>
                                <th style="border: 1px solid black;">DESCRIPCIÓN</th>
                                <th style="border: 1px solid black;">CANTIDAD</th>
                                <t t-if="only_list">
                                    <th style="border: 1px solid black;">PRECIO*</th>
                                </t>
                                <t t-if="not only_list">
                                    <th style="border: 1px solid black;">PRECIO</th>
                                    <th t-if="show_taxes" class="text-right" style="border: 1px solid black;">IVA</th>
                                    <th class="text-right" style="border: 1px solid black;">TOTAL</th>
                                </t>
                            </tr>
                       </thead>
                       <tbody class="order_tbody">
                            <t t-foreach="o.order_line" t-as="o_line">

                                <tr>
                                    <td>
                                        <span t-field="o_line.name"/>
                                    </td>
                                    <td>
                                        <span t-field="o_line.product_uom_qty"/>
                                    </td>
                                    <td>
                                        <span t-field="o_line.price_unit"/>
                                    </td>
                                    <t t-if="not only_list">
                                        <td  t-if="show_taxes" class="text-right">
                                                <span t-esc="', '.join(map(lambda x: str(x.amount), o_line.tax_id))"/>
                                            </td>
                                        <td class="text-right">
                                            <span t-if="show_taxes" t-field="o_line.price_total"/>
                                            <span t-if="not show_taxes" t-field="o_line.price_subtotal"/>
                                        </td>
                                    </t>
                                </tr>
                            </t>

                        </tbody>
                    </table>
                    <t t-if="not only_list">
                        <div class="clearfix" t-if="not show_taxes">
                            <div class="row float-right" name="total">
                                <div class="col-4">
                                    <table class="table table-sm" style="min-width: 200px;max-width: 350px;">
                                        <tr class="border-black">
                                            <td><strong>Total</strong></td>
                                            <td class="text-right">
                                                <span t-field="o.amount_untaxed"/>
                                            </td>
                                        </tr>
                                    </table>
                                </div>
                            </div>
                        </div>
                        <div class="clearfix" t-if="show_taxes">
                            <div class="row float-right" name="total">
                                <div class="col-4">
                                    <table class="table table-condensed" style="min-width: 200px;max-width: 350px;">
                                        <tr class="border-black" style="border-bottom:1px solid #dddddd;">
                                            <td><strong>Subtotal</strong></td>
                                            <td class="text-right">
                                                <span t-field="o.amount_untaxed"
                                                    />
                                            </td>
                                        </tr>
                                        <t t-foreach="o.amount_by_group" t-as="amount_by_group">
                                            <tr style="">
                                                <t t-if="amount_by_group[3] == 1 and o.amount_untaxed == amount_by_group[2]">
                                                    <td>
                                                        <span t-esc="amount_by_group[0]"/>
                                                        <span>&amp;nbsp;<span>on</span>&amp;nbsp;<t t-esc="amount_by_group[2]" t-options='{"widget": "monetary", "display_currency": o.pricelist_id.currency_id}'/></span>
                                                    </td>
                                                    <td class="text-right o_price_total">
                                                        <span t-esc="amount_by_group[1]"
                                                            t-options='{"widget": "monetary", "display_currency": o.pricelist_id.currency_id}'/>
                                                    </td>
                                                </t>
                                                <t t-else ="">
                                                    <td>
                                                        <span t-esc="amount_by_group[0]"/>
                                                    </td>
                                                    <td class="text-right o_price_total">
                                                        <span t-esc="amount_by_group[1]"
                                                            t-options='{"widget": "monetary", "display_currency": o.pricelist_id.currency_id}'/>
                                                    </td>
                                                </t>
                                            </tr>
                                        </t>
                                        <tr class="border-black">
                                            <td><strong>Total</strong></td>
                                            <td class="text-right">
                                                <span t-field="o.amount_total"/>
                                            </td>
                                        </tr>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </t>



                <div class="row" t-if="not show_taxes and not only_list">
                    <div class="col-4" style="font-size: 60%;">Importe mínimo para preparación de pedido: 20€</div>
                    <div class="col-2 offset-2" style="font-size: 60%;">Conforme el cliente</div>
                    <div class="col-2 offset-2" style="font-size: 60%;">IVA no incluido</div>
                </div>
                <t  t-if="show_taxes or only_list">
                    <t t-call="custom_documents_dismac.footer_budget_layout_custom"/>
                    <br/>
                </t>
            </div>

        </template>


        <template id="report_budget_stationery">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="o">
                    <t t-call="custom_documents_dismac.report_budget_stationery_document" t-lang="o.partner_id.lang"/>
                </t>
            </t>
        </template>


        <template id="report_budget_stationery_iva_report">
            <t t-call="web.html_container">
                <t t-set="show_taxes" t-value="True"/>
                <t t-foreach="docs" t-as="o">
                    <t t-call="custom_documents_dismac.report_budget_stationery_document" t-lang="o.partner_id.lang"/>
                </t>
            </t>
        </template>

        <template id="report_budget_stationery_list_prices_report">
            <t t-call="web.html_container">
                <t t-set="only_list" t-value="True"/>
                <t t-foreach="docs" t-as="o">
                    <t t-call="custom_documents_dismac.report_budget_stationery_document" t-lang="o.partner_id.lang"/>
                </t>
            </t>
        </template>


    </data>
</odoo>
