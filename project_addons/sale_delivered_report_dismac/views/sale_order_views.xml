<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="sale_custom_sale_order_form" model="ir.ui.view">
        <field name="name">sale.order.form.delivery_report.amount</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='order_line']/tree/field[@name='product_uom_qty']" position="after">

                <button name="get_unreceived_sale_lines"
                        context="{'sale_order_line_id': id}"
                        type="object" class="oe_stat_button" icon="fa-sign-out"/>
                <field name="planned_delivery_date"/>
                <field name="qty_canceled"/>
            </xpath>
        </field>
    </record> 
</odoo>