<?xml version="1.0"?>
<odoo>

    <record id="sale_order_form_custom" model="ir.ui.view" >
        <field name="name">sale.order.form.custom</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <!--field name="company_id" position="after">
                <field name="need_approval" />
                <field name="approval_conditions" groups="sales_team.group_sale_manager" attrs="{'invisible': [('need_approval', '=', False)]}"/>
            </field-->
            <button name="print_quotation" position="after">
                <button name="%(sale_custom_dismac.apply_global_discount_action)d" states="draft,sent" string="Apply discount to all lines" type="action" />
            </button>
            <xpath expr="//field[@name='order_line']/tree//field[@name='analytic_tag_ids']" position="attributes">
                <attribute name="attrs">{'column_invisible': True}</attribute>
            </xpath>
            <xpath expr="//field[@name='order_line']" position="before">
                <field name="show_layout" invisible="1"/>
            </xpath>
            <xpath expr="//field[@name='order_line']/tree//field[@name='layout_category_id']" position="attributes">
                <attribute name="attrs">{'column_invisible': [('parent.show_layout','=',False)]}</attribute>
            </xpath>
        </field>
    </record>

    <!-- Add filter por approval-->
    <!--record id="view_sales_order_filter_approval" model="ir.ui.view" >
        <field name="name">sale.order.filter.approval</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_sales_order_filter"/>
        <field name="arch" type="xml">

            <filter name="my_sale_orders_filter" position="after">
                <separator/>
                <filter string="Pending Approval" name="pending_approval" domain="[('need_approval','=',True), ('approval_conditions', '=', False)]"/>
                <separator/>

            </filter>
        </field>
    </record-->

    <record model="ir.ui.view" id="sale_margin_sale_order_line_form_not_visible">
        <field name="name">sale.order.line.tree.margin.invisible.view.form</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale_margin.sale_margin_sale_order_line_form"/>
        <field name="arch" type="xml">
           <xpath expr="//field[@name='order_line']/tree//field[@name='purchase_price']" position="attributes">
                <attribute name="attrs">{'column_invisible': True}</attribute>
            </xpath>
        </field>
    </record>

    <record id="view_order_agent_invisible_form_inherit" model="ir.ui.view">
        <field name="name">sale.agent.order.invisible.inherit.form</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale_commission.view_order_agent_form_inherit"/>
        <field name="arch" type="xml">

            <xpath expr="//field[@name='order_line']/tree//field[@name='commission_status']" position="attributes">
                    <attribute name="attrs">{'column_invisible': True}</attribute>
            </xpath>
            <xpath expr="//field[@name='order_line']/tree//button[@name='button_edit_agents']" position="attributes">
                    <attribute name="attrs">{'column_invisible': True}</attribute>
            </xpath>
             <xpath expr="//field[@name='commission_total']" position="attributes">
                    <attribute name="attrs">{'invisible': True}</attribute>
            </xpath>
        </field>
    </record>
</odoo>

