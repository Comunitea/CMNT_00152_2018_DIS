<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_product_import_wzd_form" model="ir.ui.view">
        <field name="name">view.stock.inv.import.wzd.form</field>
        <field name="model">stock.inventory.import.wzd</field>
        <field name="arch" type="xml">
            <form string="Import Products">
                <div name="help">
                    <h2>Select file to import</h2>
                </div>
                <group>
                    <field name="name"/>
                    <field name="inventory_id"/>


                    <field name="file" filename="filename"/>
                </group>



                <footer>
                    <button name="import_products" type="object" class="btn-primary" string="Import Products"/>
                    <button special="cancel" string="Cancel" class="oe_link"/>
                </footer> 
            </form>
        </field>
    </record>

    <record id="action_import_stock_inv" model="ir.actions.act_window">
        <field name="name">Import inventory lines</field>
        <field name="res_model">stock.inventory.import.wzd</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <menuitem id="menu_action_import_stock_inv" string="Import inventory lines"
              action="action_import_stock_inv"
              parent="stock.menu_stock_warehouse_mgmt" sequence="99"
              />
    

</odoo>
