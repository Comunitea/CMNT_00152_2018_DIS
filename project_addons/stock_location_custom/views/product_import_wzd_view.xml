<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_location_search" model="ir.ui.view">
        <field name="name">stock.location.search</field>
        <field name="model">stock.location</field>
        <field name="inherit_id" ref="stock.view_location_search"/>
        <field name="arch" type="xml">
            <search string="Stock Locations">
                <field name="name" string="Stock Locations"/>
                <filter name="in_location" string="Internal" domain="[('usage', '=', 'internal')]" help="Internal Locations"/>
                <filter name="customer" string="Customer" domain="[('usage', '=', 'customer')]" help="Customer Locations"/>
                <filter name="supplier" string="Vendor" domain="[('usage', '=', 'supplier')]" help="Vendor Locations"/>
                <field name="location_id" string="Parent Location"/>
                <separator/>
                <filter string="Archived" name="inactive" domain="[('active','=',False)]"/>
            </search>
        </field>
    </record>

    <record id="view_location_search" model="ir.ui.view">
        <field name="name">view.location.search.inherit</field>
        <field name="model">stock.location</field>
        <field name="inherit_id" ref="stock.view_location_search"/>
        <field name="arch" type="xml">

            <xpath expr="//search" position="inside">
                <field name="kind"/>
                <field name="picking_zone_id"/>
                <field name="area" />
                <field name="corridor" />
                <field name="row" />
                <field name="rack" />
                <field name="level" />
            </xpath>

        </field>
     </record>




  <record id="view_quant_package_formpi" model="ir.ui.view">
            <field name="name">	stock.quant.package.form.pi</field>
            <field name="model">stock.quant.package</field>
            <field name="inherit_id" ref="stock.view_quant_package_form"/>
            <field name="arch" type="xml">
                <field name="company_id" position="before">
                    <field name="import_name"/>
                    <field name="product_ids" widget="many2many_tags"/>
                </field>
            </field>
    </record>

    <record id="view_location_form_pi" model="ir.ui.view">
            <field name="name">	stock.location.form.pi</field>
            <field name="model">stock.location</field>
            <field name="inherit_id" ref="stock.view_location_form"/>
            <field name="arch" type="xml">
                <field name="scrap_location" position="before">
                    <field name="is_pos_x"/>
                </field>
                <field name="usage" position="before">
                    <field name="import_name" readonly="1" attrs="{'invisible': [('import_name','=','')]}"/>
                </field>
                <field name="removal_priority" position="after">
                    <field name="inverse_order" attrs="{'invisible': [('is_pos_x','!=',True)]}"/>
                </field>
                <field name="posx" position="before">
                    <field name="building"/>
                    <field name="floor"/>
                </field>
            </field>
    </record>


    <record id="view_template_property_form_pi" model="ir.ui.view">
            <field name="name">product.template.stock.property.form.pi</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="stock.view_template_property_form"/>
            <field name="arch" type="xml">
                <field name="property_stock_inventory" position="after">
                    <field name="import_location_str" />
                </field>
            </field>
    </record>

    <record id="view_product_import_wzd_form" model="ir.ui.view">
        <field name="name">view.product.import.wzd.form</field>
        <field name="model">product.import.wzd</field>
        <field name="arch" type="xml">
            <form string="Import Stocks">
                <div name="help">
                    <h2>Select file to import</h2>
                    Recuerda crear Planta 0, Planta 1 y Palets
                </div>
                <group>
                    <field name="name"/>
                    <field name="location_id"/>

                    <field name="file" filename="filename"/>
                    <field name="start_line"/>
                    <field name="end_line"/>
                    <field name="only_create_locations"/>
                    <field name="only_test_product"/>

                </group>
                <footer>
                    <button name="import_products" type="object" class="btn-primary" string="Import Products"/>
                    <button special="cancel" string="Cancel" class="oe_link"/>
                </footer> 
            </form>
        </field>
    </record>

   
    <record id="action_import_products" model="ir.actions.act_window">
        <field name="name">Import Products</field>
        <field name="res_model">product.import.wzd</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>


    <menuitem id="menu_import_product" name="Import Products"
              action="action_import_products"
              parent="stock.menu_stock_warehouse_mgmt"

              sequence="99" />
    
    
</odoo>
