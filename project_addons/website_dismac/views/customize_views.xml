<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <!-- ============= Activate or Deactivate Customizable views to prevent changes on updates ================== -->

    <!-- Ecommerce Category -->
    <record id="website_sale.products_categories" model="ir.ui.view">
        <field name="active">True</field>
    </record>

    <!-- Ecommerce Category list -->
    <record id="website_sale.categories_recursive" model="ir.ui.view">
        <field name="active">True</field>
    </record>

    <!-- Ecommerce Collapsible Category List -->
    <record id="website_sale.option_collapse_products_categories" model="ir.ui.view">
        <field name="active">True</field>
    </record>

    <!-- Ecommerce Collapse Category Recursive -->
    <record id="website_sale.option_collapse_categories_recursive" model="ir.ui.view">
        <field name="active">True</field>
    </record>

    <!-- Add to Cart -->
    <record id="website_sale.products_add_to_cart" model="ir.ui.view">
        <field name="active">True</field>
    </record>

    <!-- Add to Wishlist -->
    <record id="website_sale_wishlist.add_to_wishlist" model="ir.ui.view">
        <field name="active">True</field>
    </record>

    <!-- Shop - Product List View -->
    <record id="website_sale.products_list_view" model="ir.ui.view">
        <field name="active">False</field>
    </record>

    <!-- Shop - Scroll-->
<!--    <record id="sgeede_infinite_scroll.products_infinite_scroll" model="ir.ui.view">-->
<!--        <field name="active">True</field>-->
<!--    </record>-->

    <!-- Search Box - Show # found -->
    <record id="website_sale.search count" model="ir.ui.view">
        <field name="active">True</field>
    </record>

     <!-- Checkout - Extra Step Option -->
    <record id="website_sale.extra_info_option" model="ir.ui.view">
        <field name="active">True</field>
    </record>

</odoo>