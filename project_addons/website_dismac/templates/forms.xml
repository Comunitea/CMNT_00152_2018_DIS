<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <!-- Accept terms of use -->
    <template id="acceptance_full_legal_terms_with_check" name="Acceptance Full Legal Terms With Check Dismac">
        <div class="form-group field-legal mb0 small terms-with-check">
            <label for="privacy_policy">
                <input type="checkbox" value="accepted" id="privacy_policy" name="privacy_policy" required="required"/>
<!--                <t t-call="website_legal_page.acceptance_full"/>-->
                <span class="acceptance_full">
                    Acepto los <a href="http://www.dismac.es/avisos-legales" alt="Enlace avisos legales" title="Avisos Legales" rel="nofollow" target="_blank">avisos legales</a>
                    , la <a href="http://www.dismac.es/politica-de-cookies" alt="Enlace política de cookies" title="Política de Cookies" rel="nofollow" target="_blank">política de cookies</a>
                    , y la <a href="http://www.dismac.es/politica-de-privacidad" alt="Enlace política de privacidad" title="Política de Privacidad" rel="nofollow" target="_blank">política de privacidad</a>
                    de este sitio web.
                </span>
            </label>
        </div>
    </template>

    <!-- Accept terms of use to be included on custom div -->
    <template id="acceptance_full_legal_form_check" name="Acceptance Full Legal Form Check Dismac">
        <div class="form-check">
            <input type="checkbox" value="accepted" id="privacy_policy" name="privacy_policy" class="o_website_form_input form-check-input" required="required"/>
            <label class="form-check-label" for="privacy_policy">
                <span class="acceptance_full">
                    Acepto los <a href="http://www.dismac.es/avisos-legales" alt="Enlace avisos legales" title="Avisos Legales" rel="noindex, nofollow" target="_blank">avisos legales</a>
                    , la <a href="http://www.dismac.es/politica-de-cookies" alt="Enlace política de cookies" title="Política de Cookies" rel="noindex, nofollow" target="_blank">política de cookies</a>
                    , y la <a href="http://www.dismac.es/politica-de-privacidad" alt="Enlace política de privacidad" title="Política de Privacidad" rel="noindex, nofollow" target="_blank">política de privacidad</a>
                    de este sitio web.
                </span>
            </label>
        </div>
    </template>

</odoo>