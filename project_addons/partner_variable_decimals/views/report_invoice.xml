<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <!-- Price unit with the partner decimals, for rounding and presentation -->
    <template id="report_invoice_document_add_decimals" inherit_id="account.report_invoice_document">
        <xpath expr="//table[@name='invoice_line_table']/tbody/tr/td[4]" position="replace">
            <td class="text-right">
                <span t-field="l.price_unit" t-options="{'precision': o.partner_id.decimals}"/>
            </td>
        </xpath>
    </template>

    <template id="report_invoice_layouted_add_custom_decimals" inherit_id="sale.report_invoice_layouted">

         <!-- Taxes with nam -->
         <xpath expr="//t[@t-foreach='o.order_lines_layouted()']/table/tbody//tr/td[3]" position="replace">
            <td class="text-right">
                <span t-field="l.price_unit" t-options="{'precision': o.partner_id.decimals}"/>
            </td>
        </xpath>
    </template>
</odoo>
